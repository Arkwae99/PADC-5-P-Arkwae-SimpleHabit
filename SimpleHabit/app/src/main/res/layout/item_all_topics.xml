<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_all_topic"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/all_topics" />

        <ImageView
            android:id="@+id/iv_all_topic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:src="@drawable/ic_local_florist_white_24dp" />

        <TextView
            android:id="@+id/tv_topic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toEndOf="@id/iv_all_topic_type"
            android:text="Relax"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_3x" />

        <TextView
            android:id="@+id/tv_topic_type_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_topic_type"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            android:text="Unwind and relieve stress"
            android:textColor="@color/white_full"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>