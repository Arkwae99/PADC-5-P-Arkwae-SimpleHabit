<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_healthy_mind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_healthy_mind"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/a_healthy_mind" />

            <ImageView
                android:id="@+id/btn_add_healthy_mind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_add_white_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_healthy_mind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_healthy_mind"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Relax"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/healthy_mind_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_healthy_mind"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:text="5-10-12 mins"
        android:textColor="@color/secondary_text" />

</RelativeLayout>