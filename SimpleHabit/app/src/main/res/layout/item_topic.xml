<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/all_topics" />

        <ImageView
            android:id="@+id/iv_topic_type"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:src="@drawable/ic_local_florist_white_24dp" />

        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_topic_desc"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_toEndOf="@id/iv_topic_type"
            android:text="Focus"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_3x" />

        <TextView
            android:id="@+id/tv_topic_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_topic_type"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_toEndOf="@id/iv_topic_type"
            android:text="Unwind and Release"
            android:textColor="@color/white_full" />

    </RelativeLayout>
</android.support.v7.widget.CardView>