<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_xxlarge">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="@string/starthere"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_3x" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_heading"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:clickable="true"
        app:cardCornerRadius="@dimen/margin_medium"
        app:cardElevation="@dimen/margin_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_starthere"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:scaleType="centerCrop"
                android:src="@drawable/start_here_cv" />

            <TextView
                android:id="@+id/tv_start_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_start"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="Simple  Starter"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_above="@+id/tv_time_start_here"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="34dp"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/ic_play_arrow_white_24dp"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium_2"
                android:paddingRight="@dimen/margin_medium_2"
                android:text="Start"
                android:textColor="@color/white_full" />

            <ImageView
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_add_white_24dp" />

            <TextView
                android:id="@+id/tv_time_start_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_starthere"
                android:layout_alignRight="@+id/iv_starthere"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:text="10 mins"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_2x" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>