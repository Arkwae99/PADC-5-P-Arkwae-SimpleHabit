<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.padcmyanmar.simplehabit.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:text="@string/starthere"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_heading"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_medium"
                app:cardElevation="@dimen/margin_medium">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_starthere"
                        android:layout_width="match_parent"
                        android:layout_height="222dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/start_here_cv" />

                    <TextView
                        android:id="@+id/tv_start_here"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btn_start"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:text="Simple Habit Starter"
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_heading_1x"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="140dp"
                        android:layout_height="42dp"
                        android:layout_above="@+id/tv_time_start_here"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="34dp"
                        android:background="@drawable/rounded_button"
                        android:drawableLeft="@drawable/ic_play_arrow_white_24dp"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_medium_2"
                        android:paddingRight="@dimen/margin_medium_2"
                        android:text="Start"
                        android:textColor="@color/white_full" />

                    <ImageView
                        android:id="@+id/btn_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/margin_small"
                        android:src="@drawable/ic_add_white_24dp" />

                    <TextView
                        android:id="@+id/tv_time_start_here"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_starthere"
                        android:layout_alignRight="@+id/iv_starthere"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:layout_marginRight="@dimen/margin_medium_2"
                        android:text="5 mins"
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_regular_2x" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/tv_a_healthy_mind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_heading"
                android:layout_below="@id/cv_series"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:text="A Healthy Mind"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_a_healthy_mind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_a_healthy_mind"
                android:layout_marginTop="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tv_most_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_heading"
                android:layout_below="@id/rv_a_healthy_mind"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Most Popular"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_most_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_most_popular"
                android:layout_marginTop="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tv_all_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_heading"
                android:layout_below="@id/rv_most_popular"
                android:layout_marginTop="@dimen/margin_large"
                android:text="All Topics"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_all_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_all_topics"
                android:layout_marginTop="@dimen/margin_medium" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
